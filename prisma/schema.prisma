generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model QuranId {
  id          Int       @id
  id_sura     Int?
  id_verse    Int?
  text_ayah   String?   @db.Text
  text_indo   String?   @db.Text
  text_read   String?   @db.Text
  read_at     DateTime? @db.Timestamp(0)
  read_by     String?   @db.VarChar(50)
  complete_at DateTime? @db.Timestamp(0)

  @@index([read_by], map: "idx_read_by")
  @@index([read_at, complete_at], map: "idx_read_time")
  @@index([id_sura, id_verse], map: "idx_sura_verse")
  @@map("quran_id")
}
